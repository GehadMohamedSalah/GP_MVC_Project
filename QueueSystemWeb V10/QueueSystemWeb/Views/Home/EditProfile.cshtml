@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
<div class="login-form-area mg-t-30 mg-b-15">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-3"></div>
            <form id="adminpro-register-form" class="adminpro-form">
                <div class="col-lg-6">
                    <div class="login-bg" style="width:550px">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="logo">
                                    <a href="#">
                                        <img src="@Url.Content("~/Content/project/")img/logo/images2.jpg" alt="" />
                                    </a>
                                </div>
                            </div>
                        </div>
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.id)
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="login-title">
                                    <h1>تعديل البايانات الشخصيه</h1>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-4">
                                <div class="login-input-head">
                                    <p>الاسم بالكامل</p>
                                </div>
                            </div>
                            <div class="col-lg-8">
                                <div class="login-input-area">
                                    @Html.EditorFor(model => model.name, new { htmlAttributes = new { @name = "name", @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })
                                    <i class="fa fa-user login-user"style="left: 70px;"></i>
                                </div>
                            </div>

                        </div>
                        <div class="row">
                            <div class="col-lg-4">
                                <div class="login-input-head">
                                    <p>اسم المستخدم</p>
                                </div>
                            </div>
                            <div class="col-lg-8">
                                <div class="login-input-area">
                                    @Html.EditorFor(model => model.username, new { htmlAttributes = new { @name = "username", @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.username, "", new { @class = "text-danger" })
                                     <i class="fa fa-user login-user"style="left: 70px;"></i>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-4">
                                <div class="login-input-head">
                                    <p>عنوان البريد</p>
                                </div>
                            </div>
                            <div class="col-lg-8">
                                <div class="login-input-area">
                                    @Html.EditorFor(model => model.mail, new { htmlAttributes = new { @name = "mail", @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.mail, "", new { @class = "text-danger" })
                                       <i class="fa fa-envelope login-user" aria-hidden="true"style="left: 70px;"></i>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-4">
                                <div class="login-input-head">
                                    <p>الرقم السري</p>
                                </div>
                            </div>
                            <div class="col-lg-8">
                                <div class="login-input-area">
                                    @Html.EditorFor(model => model.password, new { htmlAttributes = new { @name = "password", @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
                                      <i class="fa fa-lock login-user"style="left: 70px;"></i>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-4">
                                <div class="login-input-head">
                                    <p>رقم التلفون</p>
                                </div>
                            </div>
                            <div class="col-lg-8">
                                <div class="login-input-area">
                                    @Html.EditorFor(model => model.phone, new { htmlAttributes = new { @name = "phone", @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.phone, "", new { @class = "text-danger" })
                                     <i class="fa fa-phone login-user" aria-hidden="true"style="left: 70px;"></i>
                                </div>
                            </div>
                        </div>
                       

                        <div class="row">
                            <div class="col-lg-4"></div>
                            <div class="col-lg-8">
                                <div class="login-button-pro">

                                    <button type="submit" class="login-button login-button-rg" style="float:right"><i class="fa big-icon fa fa-pencil"></i>  تعديل</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
            <div class="col-lg-3"></div>
        </div>
    </div>
</div>
}