<center>
@using (Html.BeginForm())
{
    <div class="login-form-area mg-t-30 mg-b-40" style="width:1200px;margin-right:-300px">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-4"></div>
                <form id="adminpro-form" class="adminpro-form">
                    <div class="col-lg-4">
                        <div class="login-bg" style="height:700px">
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="logo">
                                        <a href="#">
                                            <img src="@Url.Content("~/Content/project/")img/logo/images2.jpg" alt="" />
                                        </a>
                                     
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="login-title">
                                        <h1>نسيت كلمه السر</h1>
                                        <p style="font-size:20px">لا تقلق سوف نرسل لك بريد الكتروني لاسترجاع كلمه السر.</p>
                                    </div>
                                </div>
                            </div>
                            <div class="text-success">
                                @ViewBag.Message
                            </div>
                            <div class="row" style="margin-top:120px">
                                <div class="col-lg-4">
                                    <div class="login-input-head">
                                        <p>البريد </p>
                                    </div>
                                </div>
                                <div class="col-lg-8">
                                    <div class="login-input-area">
                                      
                                        @Html.TextBox("Email", "", new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })
                                        <i class="fa fa-envelope login-user" aria-hidden="true" style="margin-left:20px"></i>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-4">
                                </div>
                                <div class="col-lg-8">
                                    <div class="login-button-pro">
                                        <button id="saveOrder" type="submit" class="login-button login-button-lg"style="float:right">تم</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
                <div class="col-lg-4"></div>
            </div>
        </div>
    </div>
}
</center>
