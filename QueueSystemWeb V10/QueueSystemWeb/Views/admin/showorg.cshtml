<div style="width:110%;">
    @for (int i = 0; i < ViewBag.numberRow; i++)
    {
        <div style="float:right;background-color:white;margin-left:20px;padding:20px;margin-bottom:50px;width:30%;height:450px;">
            <div style="font-size:30px;font-weight:bold">
                <img src="~/Content/project/img/notification/Call-Queuing-2.jpg" alt="" style="border-radius:100%;" />
                
               
                @ViewBag.organization2[i].name
            </div>

            <div style="margin-right:40px;font-size:22px">
                <p>
                    <text style="font-weight:bold">الفرع الرئيسي  :  </text>
                    <text style="margin-right:10px;">@ViewBag.branches[i].name - @ViewBag.branches[i].branch_location</text>
                </p>

                <p><text style="font-weight:bold">المدير :  </text><text>@ViewBag.organization2[i].user.name</text></p>

                <p>
                    <text style="font-weight:bold">البريد الالكتروني : </text> <br />
                    <text style="margin-right:10px;color:cornflowerblue;">@ViewBag.organization2[i].user.mail</text>
                </p>
                <p><text style="font-weight:bold">رقم التليفون : </text><text>@ViewBag.organization2[i].user.phone</text></p>
                <p>
                    <button type="submit" class="login-button login-button-lg" style="background-color:#ebebeb;margin-left:40px">
                        <i class="fa big-icon fa fa-folder">
                            @Html.ActionLink("الخدمات", "showservise", new { @id = @ViewBag.organization2[i].id })
                        </i>
                    </button>

                    <button type="submit" class="login-button login-button-lg" style="background-color:#ebebeb;margin-left:40px">
                        <i class="fa big-icon fa fa-folder">
                            @Html.ActionLink("الفروع", "showbranch", new { @id = @ViewBag.organization2[i].id })
                        </i>
                    </button>
                </p>

                <p>
                    <text style="margin-right:10px;margin-left:20px;">
                        <a href="/admin/EditOrganization/@ViewBag.organization2[i].id"><i class='fas fa-pencil-alt' style='margin-right:10px;'></i></a>
                        @Html.ActionLink("تعديل ", "EditOrganization", new { @id = @ViewBag.organization2[i].id })
                    </text>

                    <text style="margin-right:10px;margin-left:20px;">
                        <a href="/admin/deleteorg/@ViewBag.organization2[i].id" onclick="return confirm('هل انت متأكد من انك تريد مسح منظمة @ViewBag.organization2[i].name  ؟');"><i class="fa fa-trash"></i></a>
                        @Html.ActionLink("مسح ", "deleteorg", new { @id = @ViewBag.organization2[i].id },
                                                new { onclick = "return confirm('هل انت متأكد من انك تريد مسح منظمة  " + @ViewBag.organization2[i].name + "?');" })
                    </text>


                </p>

            </div>


        </div>
    }

</div>