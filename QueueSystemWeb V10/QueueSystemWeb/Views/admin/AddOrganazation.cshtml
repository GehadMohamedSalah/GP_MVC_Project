@using (Html.BeginForm("AddOrganazation", "admin", FormMethod.Post, new { @id = "msform", @class = "adminpro-form", enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="login-form-area mg-t-30 mg-b-40"style="width: 1500px;margin-right: -150px;line-height: inherit;">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-4"></div>
                <form id="adminpro-form" class="adminpro-form">
                    <div class="col-lg-4">
                        <div class="login-bg" style="height: 700px;">
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="logo">
                                        <a href="#">
                                            <img src="@Url.Content("~/Content/project/")img/logo/images2.jpg" alt="" />
                                        </a>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="login-title" style="font-size:40px">
                                        <h1 style="font-size: 40px;">اضافه منظمه</h1>
                                    </div>
                                </div>
                            </div>
                            <input type="hidden" id="OrderId" />
                            <div class="row" style="font-size: 45px;margin-top: 60px;"> 
                                <div class="col-lg-4">
                                    <div class="login-input-head">
                                        <p  style="font-size: 35px;">الاسم</p>
                                    </div>
                                </div>
                                <div class="col-lg-8">
                                    <div class="login-input-area">
                                        @*<input type="text" id="name" name="name"  style="font-size: 20px" required maxlength="50"/>*@
                                        @Html.EditorFor(model => model.name, new { htmlAttributes = new { @name = "name", @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-4">
                                </div>
                                <div class="col-lg-8">
                                    <div class="login-button-pro">
                                        <button type="button" id="save" class="login-button login-button-rg"style="float:right;margin-top:40px">اضافه</button>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
                <div class="col-lg-4"></div>
            </div>
        </div>
    </div>

}

<script>
    $(document).ready(function () {

        //reserve
        $("#save").click(function () {
            myData = $("#msform").serialize();
            $.ajax({
                type: "POST",
                url: "/admin/AddOrganazation",
                data: myData,
                success: function (response) {
                    $("#msform").empty();
                    if (response.result == 0) {
                        alert("اسم المنظمة موجود بالفعل");
                        document.location.reload(true);
                        window.location.href = "AddOrganazation";
                    }
                    else if (response.result == 1) {
                        alert("تم اضافة المنظمة");
                        document.location.reload(true);
                        window.location.href = "AddServ";
                    }
                    else {
                        alert("البيانات المدخلة خطأ");
                        document.location.reload(true);
                        window.location.href = "AddOrganazation";
                    }

                }

            })

        })

    })
</script>