@using (Html.BeginForm("Editorg", "manager", FormMethod.Post, new { @id = "msform", enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <center>
        <div class="login-form-area mg-t-30 mg-b-40" style="width:1200px;margin-left:300px">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-4"></div>
                    <form id="adminpro-form" class="adminpro-form">
                        <div class="col-lg-4">
                            <div class="login-bg" style="width: 550px; height: 700px;">
                                <div class="row">
                                    <div class="col-lg-12">
                                        <div class="logo">
                                            <a href="#">
                                                <img src="@Url.Content("~/Content/project/")img/logo/images2.jpg" alt="" />
                                            </a>
                                        </div>
                                    </div>
                                </div>
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                @Html.HiddenFor(model => model.id)
                                <div class="row">
                                    <div class="col-lg-12">
                                        <div class="login-title">
                                            <h1 style="margin-right: -280px;">تعديل المنظمه</h1>
                                        </div>
                                    </div>
                                </div>
                                <div class="row" style="margin-top: 60px;">
                                    <div class="col-lg-4">
                                        <div class="login-input-head">
                                            <p>الاسم</p>
                                        </div>
                                    </div>
                                    <div class="col-lg-8">
                                        <div class="login-input-area">
                                            @Html.EditorFor(model => model.name, new { htmlAttributes = new { @name = "name", @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-lg-4">
                                    </div>
                                    <div class="col-lg-8">
                                        <div class="login-button-pro">

                                            <button type="button" onclick="save(@Model.id)" class="login-button login-button-lg" style="float:right;margin-top:80px"><i class="fa big-icon fa fa-pencil"></i>  تعديل</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                    <div class="col-lg-4"></div>
                </div>
            </div>
        </div>

    </center>
}


<script>
    function save(id){
        myData = $("#msform").serialize();
        $.ajax({
            type: "POST",
            url: "/manager/Editorg",
            data: myData,
            success: function (response) {
                $("#msform").empty();
                if (response.result == 0) {
                    alert("هذه المنظمة مضافة يرجى كتابة اسم اخر");
                    document.location.reload(true);
                    window.location.href = "/manager/Editorg/"+id;
                }
                else {
                    alert("تم تعديل البيانات بنجاح");
                    document.location.reload(true);
                    window.location.href = "/manager/showorg";
                }

            }

        })
    }

</script>