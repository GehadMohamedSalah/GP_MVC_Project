    <div class="col-lg-6">
        <div class="breadcome-heading">
            <form role="search" class="">
                <input type="text" placeholder="بحث..." class="form-control">
                <a href=""><i style="margin-right:125px" class="fa fa-search"></i></a>
            </form>
        </div>
    </div>

</div>
<div style="margin-right:50px">




    <div class="sparkline8-hd" style="margin-top:-60px;">
        <div class="main-sparkline8-hd">
            <h1>اعرض جميع المنظمات</h1>

        </div>
    </div>
    <div class="sparkline8-graph">
        <div class="static-table-list">
            <table id="table" data-toggle="table" data-pagination="false" data-show-toggle="false" data-click-to-select="true" data-toolbar="#toolbar">

                <thead>
                    <tr>
                        <th>اسم المنظمه</th>
                        <th>تعديل المنظمه</th>
                        <th>اعرض الفروع</th>
                        <th>اعرض الخدمات</th>

                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>@ViewBag.organization.name</td>
                        <td>
                            <button type="submit" class="login-button login-button-lg" style="background-color:#ebebeb">
                                <i class="fa big-icon fa-pencil">
                                    @Html.ActionLink("تعديل المنظمات", "Editorg", new { @id = @ViewBag.organization.id })
                                </i>
                            </button>

                        </td>

                        <td>
                            <button type="submit" class="login-button login-button-lg" style="background-color:#ebebeb">
                                <i class="fa big-icon fa fa-folder">
                                    @Html.ActionLink("اعرض الفروع", "showbranch", new { @id = @ViewBag.organization.id })
                                </i>
                            </button>
                        </td>
                        <td>
                            <button type="submit" class="login-button login-button-lg" style="background-color:#ebebeb">
                                <i class="fa big-icon fa fa-folder">
                                    @Html.ActionLink("اعرض الخدمات", "showservise", new { @id = @ViewBag.organization.id })
                                </i>
                            </button>
                        </td>


                    </tr>

                </tbody>

            </table>
        </div>


    </div>
</div>