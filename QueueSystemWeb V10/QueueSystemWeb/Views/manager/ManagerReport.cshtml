<!-- start section stats -->
<section class="statistics text-center">
    <div class="data">
        <div class="container">
            <h1>Our Main statistics</h1>
            <div class="row">
                <div class="col-md-3 col-sm-6">
                    <div class="stats wow zoomInDown" data-wow-duration="1s" data-wow-offset="20">
                        <i class="fa fa-users fa-4x"></i>
                        <p>@ViewBag.apps</p>
                        <span>الحجوزات</span>
                    </div>
                </div>
                <div class="col-md-3 col-sm-6">
                    <div class="stats wow zoomInDown" data-wow-duration="1s" data-wow-offset="20" data-wow-delay="0.5s">
                        <i class="fa fa-comments fa-4x"></i>
                        <p>@ViewBag.numofReqs</p>
                        <span>كل الطلبات</span>
                    </div>
                </div>
                <div class="col-md-3 col-sm-6">
                    <div class="stats wow zoomInDown" data-wow-duration="1s" data-wow-offset="20" data-wow-delay="1s">
                        <i class="fa fa-suitcase fa-4x"></i>
                        <p>@ViewBag.numofPendReqs</p>
                        <span>الطلبات المعلقة</span>
                    </div>
                </div>
                <div class="col-md-3 col-sm-6">
                    <div class="stats wow zoomInDown" data-wow-duration="1s" data-wow-offset="20" data-wow-delay="1.5s">
                        <i class="fa fa-support fa-4x"></i>
                        <p>@ViewBag.complaints</p>
                        <span>الشكاوى</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- end section stats -->

<div class="data-table-area mg-b-15" style="margin-left:100px">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="sparkline13-list shadow-reset">
                    <div class="sparkline13-hd">
                        <div class="main-sparkline13-hd">
                            <h1>مشاريع <span class="table-project-n">البايانات</span> جدول</h1>
                            <div class="sparkline13-outline-icon">
                                <span class="sparkline13-collapse-link"><i class="fa fa-chevron-up"></i></span>
                                <span><i class="fa fa-wrench"></i></span>
                                <span class="sparkline13-collapse-close"><i class="fa fa-times"></i></span>
                            </div>
                        </div>
                    </div>
                    <div class="sparkline13-graph">
                        <div class="datatable-dashv1-list custom-datatable-overright">
                            <div id="toolbar">
                                <select class="form-control">
                                    <option value="">تنزيل الاساسيات</option>
                                    <option value="all">تنزيل الكل</option>
                                    <option value="selected">تنزيل المحدد</option>
                                </select>
                            </div>
                            <table id="table" data-toggle="table" data-pagination="true" data-search="true" data-show-columns="true" data-show-pagination-switch="true" data-show-refresh="true" data-key-events="true" data-show-toggle="true" data-resizable="true" data-cookie="true" data-cookie-id-table="saveId" data-show-export="true" data-click-to-select="true" data-toolbar="#toolbar">
                                <thead>
                                    <tr>
                                        <th data-field="state" data-checkbox="true"></th>
                                        <th data-field="id">رقم</th>
                                        <th data-field="Employee" data-editable="true">الموظف</th>
                                        <th data-field="State" data-editable="true">الحاله</th>
                                        <th data-field="Branch" data-editable="true">الفرع</th>
                                        <th data-field="Services" data-editable="true">الخدمات</th>
                                        <th data-field="All Requests" data-editable="true">جميع الطالبات</th>
                                        <th data-field="Pending Requests">الطالبات علي قائمه الانتظار</th>                     
                                        <th data-field="Replied Messages" data-editable="true">الرسائل التي تم الرد عليها</th>
                                        <th data-field="Action">الحدث</th>
                                    </tr>
                                </thead>

                                <tbody>
                                    @for (int i = 0; i < ViewBag.emps.Count; i++)
                                    {
                                        <tr>
                                            <td></td>
                                            <td>@ViewBag.emps[i].id</td>
                                            <td>@ViewBag.emps[i].name</td>

                                            @if (ViewBag.emps[i].block == true)
                                            {
                                                <td>محظور</td>
                                            }
                                            else
                                            {
                                                <td>غير محظور</td>
                                            }
                                            <td>@ViewBag.emp_branchs[i]</td>
                                            <td class="datatable-ct">
                                                <span class="pie">
                                                    <select>
                                                        @foreach (var x in ViewBag.emp_services[i])
                                                        {
                                                            <option>@x.name</option>
                                                        }
                                                    </select>
                                                </span>
                                            </td>
                                            <td>@ViewBag.allreq[i]</td>
                                            <td>@ViewBag.pendingreq[i]</td>
                                            <td>@ViewBag.repliedmsg[i]</td>
                                            <td class="datatable-ct">
                                                <i class="fa fa-check"></i>
                                            </td>
                                        </tr>
                                    }



                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>