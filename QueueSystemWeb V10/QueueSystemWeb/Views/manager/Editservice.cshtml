                                    <div class="login-input-head">
                                        <p>نهايه الوقت</p>
                                    </div>
                                </div>
                                <div class="col-lg-8">
                                    <div class="login-input-area" style="margin-right:15px">
                                        @Html.EditorFor(model => model.endtime, new { htmlAttributes = new { @id = " endtime", @class = "form-control", @type = "time" } })
                                        @Html.ValidationMessageFor(model => model.endtime, "", new { @class = "text-danger" })
