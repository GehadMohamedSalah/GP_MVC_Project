<script>
    function save(id , org_id){
        myData = $("#msform").serialize();
        $.ajax({
            type: "POST",
            url: "/manager/Editservice",
            data: myData,
            success: function (response) {
                $("#msform").empty();
                if (response.result == 0) {
                    alert("هذه الخدمة مضافةبالفعل ");
                    document.location.reload(true);
                    window.location.href = "/manager/Editservice/" + id;
                }
                else {
                    alert("تم تعديل البيانات بنجاح");
                    document.location.reload(true);
                    window.location.href = "/manager/showservise/"+org_id;
                }

            }

        })
    }

</script>